<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Jake's Forum</title>
	<link rel="stylesheet" href="/css/normalize.css">
	<link rel="stylesheet" href="/css/style.css">
</head>
<body>
	<header>
		<div id="user-actions" class="right">
			<% if @user_name %>
			<h5 class="right"><a href="/users/<%= @user_id %>">Logged in as <%= @user_name %></a></h5>
			<div class="log-out right clear-right">
				<form method="POST" action="/users/login">
					<input type="hidden" name="_method" value="DELETE">
					<input type="submit" value="Log out">
				</form>
			</div>
			<% else %>
			<h5 class="not-logged-in right"><span>Not logged in</span></h5>
			<div id="log-reg" class="no-display">
				<h5 class="login active">Log In</h5>
				<h5 class="register right">Register</h5>
				<div class="login active">
					<form method="POST" action="/users/login">
						<input type="email" name="email" placeholder="Email">
						<input type="password" name="password" placeholder="Password">
						<input type="submit" value="Log In">
					</form>
				</div>
				<div class="register no-display active">
					<form method="POST" action="/users">
						<div class="left">
							<input type="text" name="fname" placeholder="First Name (required)" required>
							<input type="text" name="lname" placeholder="Last Name">
						</div>
						<div class="left">
							<input type="email" name="email" placeholder="Email (required)" required>
							<input type="password" name="password" placeholder="Password (required)" required>
						</div>
						<input type="submit" value="Register" class="left">
					</form>
				</div>
			</div>
			<% end %>
		</div>
		<h1><a href="/">Jake's Forum</a></h1>
	</header>
	<div id="background-color"></div>
	<div class="container">

	<%= yield %>

	</div>
	<script type="text/javascript" src="/js/main.js"></script>
</body>
</html>